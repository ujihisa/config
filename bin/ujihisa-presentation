#!/usr/bin/bash -ex
case "$1" in
  start*)
    xrandr --output DP-1 --mode 1920x1080 -r 60 && xfconf-query -c xsettings -p /Xft/DPI -s 96 && xfconf-query -c xfce4-panel -p /panels/panel-1/size -s 48
    ;;
  end*)
    xrandr --output DP-1 --mode 3840x2160 -r 60 && xfconf-query -c xsettings -p /Xft/DPI -s 144 && xfconf-query -c xfce4-panel -p /panels/panel-1/size -s 96
    ;;
  current*)
    xrandr
    xfconf-query -c xsettings -p /Xft/DPI -lv
    xfconf-query -c xfce4-panel -p /panels/panel-1/size -lv
    ;;
  *)
    echo 'Run `ujihisa-presentation start` or `ujihisa-presentation end`' 1>&2
    exit 1
esac
